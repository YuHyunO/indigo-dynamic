<?xml version="1.0" encoding="euc-kr"?>
<!--<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">-->
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <import resource="datasource.xml"/>

    <!-- DB Access Component -->
    <bean class="com.mb.dnm.access.db.DataSourceProvider">
        <property name="queryExecutors">
            <list>
                <bean class="com.mb.dnm.access.db.DataSourceProvider$ExecutorFactory">
                    <property name="name"   value="DB1"/>
                    <property name="dataSource"     ref="DB1"/>
                    <property name="configLocation" value="mybatis-confiuration.xml"/>
                    <property name="mapperLocations" value="SQL_*.xml"/>
                </bean>
                <bean class="com.mb.dnm.access.db.DataSourceProvider$ExecutorFactory">
                    <property name="name"   value="DB2"/>
                    <property name="dataSource"     ref="DB2"/>
                    <property name="configLocation" value="mybatis-confiuration.xml"/>
                    <property name="mapperLocations" value="SQL_*.xml"/>
                </bean>
            </list>
        </property>
    </bean>

</beans>