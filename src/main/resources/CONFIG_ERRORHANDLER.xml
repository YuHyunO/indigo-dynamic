<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd">

    <util:list id="exceptions_to_handle">
        <bean class="java.sql.SQLException"/>
        <bean class="java.io.IOException"/>
        <bean class="mb.dnm.exeption.InvalidServiceConfigurationException"/>
    </util:list>

    <util:list id="error_handler">
        <bean class="mb.dnm.exeption.handler.ServiceProcessableErrorHandler">
            <property name="exceptionToHandle"          ref="exceptions_to_handle"/>
        </bean>
    </util:list>

</beans>