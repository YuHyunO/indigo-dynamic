                    <bean class="mb.dnm.access.file.FileTemplate">
                        <property name="templateName"           value="FTP2"/>
                        <property name="remoteSendDir"          value="/send"/>
                        <property name="remoteMoveDir"          value="/receive"/>
                    </bean>
                </list>
            </property>
        </bean>

        <bean class="mb.dnm.storage.InterfaceInfo">
