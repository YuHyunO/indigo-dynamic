                    <property name="frontMethods"       value="GET, POST"/>
                    <property name="contentTypes"       value="application/json, application/xml"/>
                </bean>
            </property>
            <property name="serviceId"              value="HTTP_TEMPLATE_TEST"/>
        </bean>

